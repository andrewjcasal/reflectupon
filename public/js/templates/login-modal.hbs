  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Log in as <span style="color:#00AA27">Beta</span> User</h4>
      </div>
      <div class="modal-body">
        {{#if message}}
            <div class="special-msg">{{ message }}</div>
        {{/if}}
        <div class="form-container login-form">
            <form id="login-form" action="/login" method="post" role="form">
            <form role="form">
                <div class="form-group">
                    <label>E-mail or Username</label>
                    <input class="form-control" type="text" name="username"/>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input class="form-control" type="password" name="password"/>
                </div>
                <div class="submit-box">
                    <input type="submit" value="Log in"/>
                </div>
                <div class="forgot-password-container">
                    <a href="javascript:;" class="forgot-password">Forgot your password?</a>
                </div>
            </form>
            <form id="forgot-password" action="/forgot" method="post">
                <div class="row-container clearfix">
                    Forgot your password?
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input class="form-control" type="text" name="email" />
                </div>
                <div class="submit-box clearfix">
                    <input type="submit" value="Retrieve"/>
                </div>
            </form>
        </div>
      </div>
    </div>
  </div>