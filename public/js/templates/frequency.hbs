{{#if showCommunity}}
<div class="module">
  <div class="header">My Communities</div>
  <ul>
    {{#each myCommunities}}
      <li>
        <a data-track="go-to-community" data-id="{{_id}}" href="/community/{{title}}">{{title}}</a>
      </li>
    {{/each}}
    {{#unless myCommunities}}
      <div style="padding: 10px; border-bottom:1px solid #ccc">
        These are some communities we suggest for our first-time users!
      </div>
      <li>
        <div style="font-size:13px">SUGGESTED</div>
        <a data-track="suggested-community" href="/community/Poly%20Power">Poly Power</a>
      </li>
      <li>
        <div style="font-size:13px">SUGGESTED</div>
        <a data-track="suggested-community" href="/community/Pornless">Pornless</a>
      </li>
      <li>
        <div style="font-size:13px">SUGGESTED</div>
        <a data-track="suggested-community" href="/community/Social%20Anxiety">Social Anxiety</a>
      </li>
    {{/unless}}
  </ul>
  <a href="/communities" class="module-option" style="border-top: 1px solid #ccc" data-track="find-community"><i class="fa fa-users"></i>Find New Community</a>
  <a href="javascript:;" class="module-option add-community" style="border-top: 1px solid #ccc"><i class="fa fa-info-circle"></i>Suggest Community</a>
</div>
{{/if}}
{{#if showChallenges}}
<div class="module">
  <div class="header">My Actions</div>
  <ul>
    {{#each myChallenges}}
    <li class="clearfix">
      <a data-track="go-to-challenge" data-id="{{_id}}" href="/challenge/{{_id}}" style="padding-top:3px;float:left">{{title}}</a>
      <i class="fa fa-check btn btn-primary" data-track="fast-complete-challenge" data-id="{{_id}}" style="float:right"></i>
      <span class="success-label" style="float:right;display:none;">Done!</span>
    </li>
    {{/each}}
  </ul>
  <a data-track="find-challenges" href="/challenges" class="module-option" style="border-top: 1px solid #ccc">
    <i class="fa fa-users"></i>Find Actions
  </a>
</div>
{{/if}}
{{#if showEntries}}
<div class="module entries-container" {{#if no_entries}}style="display:none"{{/if}}>
  <div class="header">My Entries</div>
</div>
{{/if}}