<div class="main-module">
  <div class="header">
  <div class="clearfix title-container">
    <div class="clearfix">
      <div class="title main-header">{{title}}
        {{#unless cantSubscribe}}
        <div class="clearfix">
          <div style="float:left" class="subscription-status {{#if isSubscribed}}subscribed{{/if}}">
            <a href="javascript:;" class="subscription-button">{{#if isSubscribed}}Subscribed{{else}}Subscribe{{/if}}</a>
            <div class="members">{{members.length}} {{#equal members.length 1}}member{{else}}members{{/equal}}</div>
          </div>
        </div>
        {{/unless}}
        {{#if isCreator}}
          <div style="position:absolute;top:15px;right:15px;text-align:right">
            <a href="javascript:;">
              <i class="fa fa-pencil"></i>
            </a>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
    <div class="edit-title-container" style="display:none; text-align: right;padding:10px">
      <textarea style="border: 1px solid #ccc;width:100%;margin-bottom:10px;">{{title}}</textarea>
      <button class="btn btn-primary">Change</button>
    </div>
</div>
<div class="clearfix desc-section {{#if isCreator}}is-creator{{/if}}">
  <div class="clearfix description-container" style="position:relative">
    <div class="description">
      <div class="main-desc" {{#if isCreator}}style="width:90%"{{/if}}>
          {{description}}
      </div>
      {{#if isCreator}}
        <div style="position:absolute;top:15px;right:15px;">
          <a href="javascript:;">
            <i class="fa fa-pencil"></i>
          </a>
        </div>
      {{/if}}
    </div>
  </div>
  <div class="edit-description-container" style="display:none; text-align:right;padding:10px">
    <textarea style="border: 1px solid #ccc;font-size:14px;width:100%;margin-bottom:10px;min-height:80px">{{description}}</textarea>
    <button class="btn btn-primary">Change</button>
  </div>
</div>