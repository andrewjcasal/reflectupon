
  <div style="padding:10px;border-bottom:1px solid #ccc">
    <div style="font-size:18px;margin-bottom:8px"><span style="color:green">Challenge</span> / <a href="/challenge/{{_id}}">{{title}}</a></div>
    <div style="margin-bottom: 10px">{{description}}</div>
    {{#if pick}}
      <button class="btn btn-primary pick-challenge">Pick Challenge</button>
    {{else}}
      {{#unless started}}
        <button class="btn btn-primary start-challenge">Start Challenge</button>
      {{else}}
        <button class="btn btn-primary complete-challenge">Complete Challenge</button>
      {{/unless}}
    {{/if}}
  </div>