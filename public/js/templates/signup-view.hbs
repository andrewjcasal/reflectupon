{{#if message}}
    <div class="special-msg">{{ message }}</div>
{{/if}}
<div class="form-container login-form">
    <form id="register-form" action="/register" method="post">
        <a class="btn btn-social btn-block btn-facebook" href="/login/facebook">
            <span class="fa fa-facebook"></span>
            Signup with Facebook
        </a>
        <div class="divider"><strong>OR</strong></div>
        <div class="form-group" id="username-field">
            <label>Username</label>
            <input class="form-control" type="text" name="username" value="{{username}}" />
            <span class="error"></span>
        </div>
        <div class="form-group" id="email-field">
            <label>E-mail</label>
            <input class="form-control" type="text" name="email" value="{{email}}" {{#if nonUserSignedUp}}readOnly="true"{{/if}} />
            <span class="error"></span>
        </div>
        <div class="form-group" id="password-field">
            <label>Password</label>
            <input class="form-control" type="password" name="password"/>
            <span class="error"></span>
        </div>
        <div class="form-group" id="confirm-password-field">
            <label>Confirm Password</label>
            <input class="form-control" type="password"/>
            <span class="error"></span>
        </div>
        <div style="margin-bottom: 15px">By signing up, you agree to our <a target="_blank" href="http://ourdisclaimer.com/?i=heroslive.com">Terms of Use</a>.</div>
        {{#if nonUserSignedUp}}
            <input type="hidden" name="nonUserSignedUp" value="true">
        {{/if}}
        {{#if experiment}}
            <input type="hidden" name="thoughtId" value="{{thoughtId}}">
        {{/if}}
        <div class="submit-box clearfix">
            <input type="submit" value="Register"/>
        </div>
    </form>
</div>
