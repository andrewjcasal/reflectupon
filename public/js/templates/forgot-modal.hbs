  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Log in as <span style="color:#00AA27">Beta</span> User</h4>
      </div>
      <div class="modal-body">
        {{#if message}}
            <div class="special-msg">{{ message }}</div>
        {{/if}}
        <div class="form-container login-form">
            <form id="forgot-password">
                <div class="row-container clearfix">
                    Forgot your password?
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input id="email" class="form-control" type="text" name="email" value="{{email}}" />
                </div>
                <div class="submit-box clearfix">
                    <input class="submit-forgot" type="submit" />
                </div>
                <div class="email-sent" style="color:#00AA27;font-size:16px;display:none;">
                  An e-mail has been sent to your e-mail address, so you can proceed to reset your password.
                </div>
            </form>
        </div>
      </div>
    </div>
  </div>